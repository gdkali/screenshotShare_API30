<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/scenicImage"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:contentDescription="@string/background_scenic"
        android:scaleType="fitXY"
        android:src="@drawable/ic_android_512dp"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/apiName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="Android 11"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        app:layout_constraintBottom_toBottomOf="@+id/scenicImage"
        app:layout_constraintEnd_toEndOf="@+id/scenicImage"
        app:layout_constraintStart_toStartOf="@+id/scenicImage"
        app:layout_constraintTop_toBottomOf="@+id/scenicImage" />

    <TextView
        android:id="@+id/dummyText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:text="@string/dummy_text"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/scenicImage"
        tools:layout_editor_absoluteX="9dp" />

    <Button
        android:id="@+id/shareButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#1EF85E"
        android:text="@string/share_btn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/dummyText"
        app:layout_constraintStart_toStartOf="@+id/dummyText"
        app:layout_constraintTop_toBottomOf="@+id/dummyText" />

</androidx.constraintlayout.widget.ConstraintLayout>